<div class="centered">
  <h1 class="centered-text">Ready Player One</h1>


  <div class="form_error"><%= @form_error %></div><br>

  <form class="pure-form pure-form-aligned login_form" action="/login" method="post">
    <fieldset>
      <div class="pure-control-group">
        <label for='username'>Username</label>
        <input id="username" type="text" name="username" placeholder="Username" required>
      </div>

      <div class="pure-control-group">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" placeholder="Password" required>
      </div>

      <div class="pure-controls">
        <button type="submit" class="pure-button pure-button-primary login_form_submit">Submit</button>
      </div>
    </fieldset><br><br><br>
    <a href="/users/new" class="not-member">Not yet a member?</a><br><br>
  </form>

</div><br><br><br><br>